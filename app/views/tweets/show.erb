<div class="body-content">
  <div class="tweets">
    <p><%= @tweet.user.username %></p>
    <p><%= @tweet.content %></p>
  </div>

  <form action="/tweets/<%= @tweet.id %>/delete" method="POST">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Tweet" class="btn btn-default btn-sm">
  </form>

  <form action="/tweets/<%= @tweet.id %>/edit" method="POST">
    <input type="submit" class="btn btn-default btn-sm" value="Edit Tweet">
  </form>

</div>